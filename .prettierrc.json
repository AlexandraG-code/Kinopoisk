{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "trailingComma": "none",
  "tabWidth": 4,
  "useTabs": true,
  "semi": false,
  "singleQuote": true,
  "printWidth": 120,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^react$",
    "^react.*",
    "^[a-z]",
    "^@ant.*",
    "^@app/(.*)$",
    "^@pages/(.*)$",
    "^@widgets/(.*)$",
    "^@features/(.*)$",
    "^@entities/(.*)$",
    "^@shared/(.*)$",
    "^../(.*)$",
    "^./(.*)$",
    "^.*.module.scss$",
    "^.*.scss$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
